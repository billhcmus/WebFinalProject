<div class="related-products-wrapper">
    <h2 class="related-products-title">Sản phẩm cùng loại</h2>
    <div class="related-products-carousel">       
        {{#each sameType}}
        <div class="single-product">
            <div class="product-f-image">
                <img src="/img/{{picture}}.jpg" alt="">
                <div class="product-hover">
                    <a href="" class="add-to-cart-link">
                        <i class="fa fa-shopping-cart"></i> Thêm vào giỏ</a>
                    <a href="/product?id={{id}}" class="view-details-link">
                        <i class="fa fa-link"></i> Chi tiết</a>
                </div>
            </div>
            <h2>
                <p href="/product?id={{id}}">{{name}}</a>
            </h2>
            <div class="product-carousel-price">
                <ins>{{price}}$</ins>
                <del>{{price}}$</del>
            </div>
        </div>
        {{/each}}     
    </div>
</div>

<div class="related-products-wrapper">
    <h2 class="related-products-title">Sản phẩm cùng nhà sản xuất</h2>
    <div class="related-products-carousel">
        {{#each sameBrand}}
        <div class="single-product">
            <div class="product-f-image">
                <img src="/img/{{picture}}.jpg" alt="">
                <div class="product-hover">
                    <a href="" class="add-to-cart-link">
                        <i class="fa fa-shopping-cart"></i> Thêm vào giỏ</a>
                    <a href="/product?id={{id}}" class="view-details-link">
                        <i class="fa fa-link"></i> Chi tiết</a>
                </div>
            </div>

            <h2>
                <a href="/product?id={{id}}">{{name}}</a>
            </h2>

            <div class="product-carousel-price">
                <ins>{{price}}$</ins>
                <del>{{price}}$</del>
            </div>
        </div>
        {{/each}}
    </div>
</div>


{{#section 'js'}}
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $('.related-products-carousel').owlCarousel({
            loop: true,
            nav: true,
            margin: 20,
            responsiveClass: true,
            responsive: {
                0: {
                    items: 1,
                },
                600: {
                    items: 2,
                },
                1000: {
                    items: 2,
                },
                1200: {
                    items: 3,
                }
            }
        });
    })(jQuery);
</script>
{{/section}}

