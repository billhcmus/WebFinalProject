{{#each products}}
<div class="product-breadcroumb">
    <a href="/management">Quản lý</a>
    <a href="/management">Cập nhật Sản phẩm</a>
    <a href="">{{name}}</a>
</div>
<div class="row">
    <div class="col-sm-6">
        <div class="product-images">
            <div class="product-main-img">
                <img src="/img/{{this.picture}}.jpg" alt="">
            </div>
            <h4>Upload ảnh mới:</h4>
            <h3 style="margin-top:100px;">Cấu hình: </h3>
            <div id="content_features">
                <div class="ty-product-feature-group">
                    <h3 class="ty-subheader">
                    CPU
                    </h3>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Công nghệ CPU:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{cpuName}}" onchange="
                        document.getElementById('pd_cpu_name').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[0].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Loại CPU - Tốc Độ:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{cpuType}}" onchange="document.getElementById('pd_cpu_type').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[1].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Bộ nhớ đệm:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{cache}}" onchange="document.getElementById('pd_cache').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[2].value);" />
                    </div>
                </div>
                <div class="ty-product-feature-group">
                    <h3 class="ty-subheader">
                    RAM
                    </h3>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Dung lượng RAM:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{ramSize}}" onchange="document.getElementById('pd_ram_size').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[3].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Loại RAM:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{ramType}}" onchange="document.getElementById('pd_ram_type').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[4].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Tốc độ BUS</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{busSpeed}}" onchange="document.getElementById('pd_ram_busspeed').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[5].value);" />
                    </div>
                </div>
                <div class="ty-product-feature-group">
                    <h3 class="ty-subheader">
                    Đĩa cứng
                    </h3>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Dung lượng ổ đĩa:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{diskSize}}" onchange="document.getElementById('pd_disk_size').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[6].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Loại ổ đĩa:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{diskType}}" onchange="document.getElementById('pd_disk_type').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[7].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Vòng quay</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{diskRound}}" onchange="document.getElementById('pd_disk_round').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[8].value);" />
                    </div>
                </div>
                <div class="ty-product-feature-group">
                    <h3 class="ty-subheader">
                    Màn hình
                    </h3>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Công nghệ màn hình:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{monitorTech}}" onchange="document.getElementById('pd_monitor_tech').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[9].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Kích thước màn hình:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{monitorSize}}" onchange="document.getElementById('pd_monitor_size').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[10].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Độ phân giải</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{monitorResolution}}" onchange="document.getElementById('pd_monitor_resolution').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[11].value);" />
                    </div>
                </div>
                <div class="ty-product-feature-group">
                    <h3 class="ty-subheader">
                    Card đồ họa
                    </h3>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label"> Bộ nhớ đồ họa:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{sizeGraphic}}" onchange="document.getElementById('pd_graphic_size').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[12].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Chipset đồ họa:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{chipset}}" onchange="document.getElementById('pd_chipset').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[13].value);" />
                    </div>
                </div>
                <div class="ty-product-feature-group">
                    <h3 class="ty-subheader">
                    Giao tiếp
                    </h3>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label"> Kết nối mạng:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{networkConnection}}" onchange="document.getElementById('pd_network_connection').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[14].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Bluetooth:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{bluetooth}}" onchange="document.getElementById('pd_bluetooth').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[15].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">HDMI:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{hdmi}}" onchange="document.getElementById('pd_hdmi').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[16].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Reader:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{cardReader}}" onchange="document.getElementById('pd_cardreader').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[17].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">USB:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{usb}}" onchange="document.getElementById('pd_usb').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[18].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Video Port:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{videoPort}}" onchange="document.getElementById('pd_videoport').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[19].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Headphone/Speaker out:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{speaker}}" onchange="document.getElementById('pd_speaker').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[20].value);" />
                    </div>
                </div>
                <div class="ty-product-feature-group">
                    <h3 class="ty-subheader">
                    Xuất xứ - Nhà sản xuất
                    </h3>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Xuất xứ:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{madein}}" onchange="document.getElementById('pd_madein').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[21].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Nhà sản xuất:</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{manufacturer}}" onchange="document.getElementById('pd_manufacturer').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[22].value);" />
                    </div>
                    <div class="ty-product-feature">
                        <span class="ty-product-feature__label">Loại hàng</span>
                        <input type="text" class="ty-product-feature__value form-control" value="{{typeProduct}}" onchange="document.getElementById('pd_typeproduct').setAttribute('value', document.getElementsByClassName('ty-product-feature__value')[23].value);" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="product-inner">
            <h3>Tên sản phẩm:</h3>
            <input type="text" class="product-name form-control" value="{{name}}" onchange="document.getElementById('pd_name').setAttribute('value', document.getElementsByClassName('product-name')[0].value);" />
            <div class="product-inner-price">
                <h3>Gía:</h3>
                <input type="number" class="form-control product-price" value="{{price}}" style="width:100px; font-size:20px; display: inline;" onchange="document.getElementById('pd_price').setAttribute('value', document.getElementsByClassName('product-price')[0].value);" /><p style="display: inline; font-size:20px; margin-left: 10px;">$</p>
            </div>
            <div>
                <h3>Số lượng tồn:</h3>
                <input type="number" class="product-inware form-control" value="{{inware}}" style="width:100px; font-size:20px;" onchange="document.getElementById('pd_inware').setAttribute('value', document.getElementsByClassName('product-inware')[0].value);" />
            </div>
            <h3 style="margin-top:20px;">Mô tả sản phẩm:</h3>
            <h4 id="product-config">Cấu hình:</h4>
            <textarea cols="100" rows="15" class="description-info form-control" onchange="document.getElementById('pd_des_config').setAttribute('value', document.getElementsByClassName('description-info')[0].value);" >{{configInfo}}</textarea>
            <h4 id="product-config" style="margin-top:20px;">Thiết kế:</h4>
            <textarea cols="100" rows="15" class="description-design form-control" onchange="document.getElementById('pd_des_design').setAttribute('value', document.getElementsByClassName('description-design')[0].value);" >{{designInfo}}</textarea>
            <h4 id="product-config" style="margin-top:20px;">Bàn phím và touchpad:</h4>
            <textarea cols="100" rows="15" class="description-kbtp form-control" onchange="document.getElementById('pd_des_kbtp').setAttribute('value', document.getElementsByClassName('description-kbtp')[0].value);" >{{KeyboardAndTouchpad}}</textarea>
            <h4 id="product-config" style="margin-top:20px;">Cổng giao tiếp:</h4>
            <textarea cols="100" rows="15" class="description-port form-control" onchange="document.getElementById('pd_des_port').setAttribute('value', document.getElementsByClassName('description-port')[0].value);" >{{portInfo}}</textarea>
        </div>
    </div>
</div>
<form class="form-horizontal" method="POST" action="/management/product/updated" enctype="multipart/form-data">
    <fieldset>
        <div class="form-group">
            <div style="display:none;">
                <input id="pd_name" name="pd_name" type="text" value="{{name}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_price" name="pd_price" type="text" value="{{price}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_inware" name="pd_inware" type="text" value="{{inware}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_des_config" name="pd_des_config" type="text" value="{{configInfo}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_des_kbtp" name="pd_des_kbtp" type="text" value="{{designInfo}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_des_port" name="pd_des_port" type="text" value="{{portInfo}}"/>
            </div>
            <div style="position:absolute; top: 355px; left: 200px;">
                <input id="pd_photo" name="upload_photo" type="file"/>
            </div>
            <div style="display:none;">
                <input id="pd_cpu_name" name="pd_cpu_name" type="text" value="{{cpuName}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_cpu_type" name="pd_cpu_type" type="text" value="{{cpuType}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_cache" name="pd_cache" type="text" value="{{cache}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_ram_size" name="pd_ram_size" type="text" value="{{ramSize}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_ram_type" name="pd_ram_type" type="text" value="{{ramType}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_ram_busspeed" name="pd_ram_busspeed" type="text" value="{{busSpeed}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_disk_size" name="pd_disk_size" type="text" value="{{diskSize}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_disk_type" name="pd_disk_type" type="text" value="{{diskType}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_disk_round" name="pd_disk_round" type="text" value="{{diskRound}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_monitor_tech" name="pd_monitor_tech" type="text" value="{{monitorTech}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_monitor_size" name="pd_monitor_size" type="text" value="{{monitorSize}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_monitor_resolution" name="pd_monitor_resolution" type="text" value="{{monitorResolution}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_graphic_size" name="pd_graphic_size" type="text" value="{{sizeGraphic}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_chipset" name="pd_chipset" type="text" value="{{chipset}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_network_connection" name="pd_network_connection" type="text" value="{{networkConnection}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_bluetooth" name="pd_bluetooth" type="text" value="{{bluetooth}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_hdmi" name="pd_hdmi" type="text" value="{{hdmi}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_cardreader" name="pd_cardreader" type="text" value="{{cardReader}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_usb" name="pd_usb" type="text" value="{{usb}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_videoport" name="pd_videoport" type="text" value="{{videoPort}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_speaker" name="pd_speaker" type="text" value="{{speaker}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_cardreader" name="pd_cardreader" type="text" value="{{cardReader}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_madein" name="pd_madein" type="text" value="{{madein}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_manufacturer" name="pd_manufacturer" type="text" value="{{manufacturer}}"/>
            </div>
            <div style="display:none;">
                <input id="pd_typeproduct" name="pd_typeproduct" type="text" value="{{typeProduct}}"/>
            </div>
        </div>
        <button type="submit" class="btn btn-default" style="background-color: #1ABC9C; color: white; display: block; width: 150px; height: 80px; margin-right: 50px; margin-top: 50px; float: right;">Lưu cập nhật</button>
    </fieldset>
</form>
{{/each}}