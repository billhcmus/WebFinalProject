<style>
    .dashboard-products {
        background-color: #DDD;
    }
    .dashboard-classify, .dashboard-brands {
        background-color: white;
    }
</style>

<form id="searchform" role="form" method="post" action="/dashboard/search">
    <div class="search col-md-6">
        <input type="text" placeholder="Tên sản phẩm..." class="form-control" id="search-input" name="searchWhat" style="margin-left: 0px;"/>
    </div>
    <div class="search-type col-md-4">    
        <button type = "submit" class="search-type-btn click col-md-6 glyphicon glyphicon-search" id='btn_Search' style="margin-left: -25px;"></button> 
    </div>   
</form>

<div class="col-md-8">
    <div class="panel panel-default statistics-products" style="">
        <div class="panel-heading">
            <h3 class="panel-title">Thống kê sản phẩm</h3>
        </div>
        <div class="panel-body" style="margin-bottom: -4%;">
            <table class="table bootstrap-datatable">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Giá bán</th>
                        <th>Số lượng bán</th>
                        <th>Tồn kho</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                        <tr>
                            <th>{{this.name}}</th>
                            <th>{{this.price}}</th>
                            <th>{{this.buyTimes}}</th>
                            <th>{{this.inware}}</th>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>