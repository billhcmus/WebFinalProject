<div class='dashboard-order have-margin'><table class='table-responsive-2'>
    <tbody>
        {{#each orders}}
        <tr class='colorgrey'>
            <td><a href='buy-info.html'>{{this.idBill}}</a></td>
            <td>{{this.time}}</td>
            <td>{{this.total}}&nbsp;₫</td>
            <td>
                <span class='status-btn' onclick='statusOnClick(0, 0)' style='font-weight:700;'>Success | </span><span class='status-btn' onclick='statusOnClick(0, 0)' style='color:#FF6600; font-weight:700;'>{{this.state}}</span><span class='status-btn' onclick='statusOnClick(0, 0)' style='font-weight:700;'> | Canceled</span>
            </td>
        </tr>
        {{/each}}
        {{#if isempty}}
        <center>Không có hóa đơn nào</center>
        {{/if}}
        <hr />
    </tbody>
</table>
</div>