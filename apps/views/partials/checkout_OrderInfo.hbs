<table class="shop_table">
    <thead>
        <tr>
            <th class="product-name">Sản phẩm</th>
            <th class="product-total">Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        {{#each info}}
        <tr class="cart_item">
            <td class="product-name">
                 <a href='/product?id={{this.id}}'>
                    <img width="70" height="70" alt="poster_1_up" class="shop_thumbnail" src="/img/{{picture}}.jpg">
                     {{name}}
                </a>
               
                <strong class="product-quantity">× {{count}}</strong>
            </td>
            <td class="product-total">
                <span class="amount">{{multiple price count}} $</span>
            </td>
        </tr>
        {{/each}}
    </tbody>
    <tfoot>
        <tr class="order-total">
            <th>Tổng</th>
            <td>
                <strong>
                    <span class="amount">{{total}} $</span>
                </strong>
            </td>
        </tr>

    </tfoot>
</table>