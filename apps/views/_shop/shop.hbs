{{> a_HeaderShop}}
<div class="container">
    {{> a_HeaderSearch}}
    <div class="single-product-area">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-12">
                    <form id="filterform" role="form" method="post" action="/shop/filter">
                    {{> listProducers}} 
                    {{> kindProduct}} 
                    {{> priceProduct}}
                    <button type="submit" class="btn btn-default filter-btn" onclick="filter();">Lọc</button>
                    </form>
                </div>
                {{#if noProducts}} 
                <div class="col-md-9 col-sm-12">
                    <h2 class="text-danger">Không có sản phẩm thoả yêu cầu.</h2>
                </div>
                {{else}}
                <div class="col-md-9 col-sm-12">
                    {{> listProducts}}
                </div>
                {{/if}}
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="product-pagination text-center">
                        <nav>
                            <ul class="pagination">

                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{{#section 'js'}}
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
        //search type choosing
            $('.content-drop').bind('click', function (event) {
                var selected = $(this).text();
                $('.dropdown-text').text(selected);
                $('#search-input').attr('placeholder', "Tên " + selected.toLowerCase() + "...");
            });
        });

        $("#searchform" ).submit(function(event) {
            let tmp = $('.dropdown-text').text();
            if (tmp === "Sản phẩm") 
            { 
                $(this).append('<input type="hidden" name="typeSearch" value ="name"/>');
            }
            else if (tmp === "Loại") 
            { 
                $(this).append('<input type="hidden" name="typeSearch" value="type"/>');
            }
        });

    </script>
{{/section}}