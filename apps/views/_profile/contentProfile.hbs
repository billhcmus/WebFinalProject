  <div class="content-profile" style="margin: 5%;">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                        <div class="profiles">
                            <p class="image"><img src="/img/avatar.jpg" height="100" width="100" alt=""></p>
                            <p class="control-label">Tài khoản của</p>
                            <h6>{{user.username}}</h6>
                        </div>
                        <div class="nav navbar-nav">
                            
                            <li class="active">
                                <a href="/profile_user"><i class="fa fa-user"></i> <span>Thông tin tài khoản</span></a>
                            </li>
                            <li class="">
                                <a href="/history_user"> <i class="fa fa-book"></i> <span>Quản lý đơn hàng</span></a>
                            </li>
                            
                        </div>
                    </div>
                <div class="col-md-8">
                    <form class="form-horizontal col-md-8" method="POST" action="/profile_user/update_Info"> 
                        <fieldset>
                            <legend>Thông tin tài khoản</legend>
                            {{#if success_msg}}
                                <div class="alert alert-success">{{success_msg}}</div>

                            {{else if error_msg}}
                                <div class="alert alert-danger">{{error_msg}}</div>

                            {{else if error}}
                                <div class="alert alert-danger">{{error}}</div>
                            {{/if}}
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="lbl_FullName">Họ tên</label>  
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-user"></i>
                                        </div>
                                        <input id="txt_FullName" name="fullName" type="text" placeholder="Họ tên" class="form-control input-md" value="{{user.name}}">
                                        </div>
                                </div>
                            </div>
            
                            <!-- File Button --> 
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="lbl_UploadPhoto">Tải ảnh lên</label>
                                <div class="col-md-6">
                                    <input id="Upload_photo" name="upload_photo" class="" type="file">
                                </div>
                            </div>
            
                            <!-- Text input-->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="lbl_DateOfBirth">Ngày sinh</label>  
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-birthday-cake"></i>
                                        </div>
                                        <input id="txt_Date_Of_Birth" name="date_Of_Birth" type="date" placeholder="Ngày sinh" class="form-control input-md" value="{{user.birthday}}">
                                    </div>
                                </div>
                            </div>
            
                            <!-- Multiple Radios (inline) -->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="lbl_Gender">Giới tính</label>
                                <div class="col-md-6"> 
                                    {{#if isMan}}
                                        <label class="radio-inline">
                                            <input type="radio" name="gender" id="Gender_Male" value="1" checked="checked">
                                            Nam
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" name="gender" id="Gender_Female" value="2">
                                            Nữ
                                        </label>
                                    {{else}}
                                        <label class="radio-inline">
                                            <input type="radio" name="gender" id="Gender_Male" value="1">
                                            Nam
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" name="gender" id="Gender_Female" value="2" checked="checked">
                                            Nữ
                                        </label>
                                    {{/if}}
                                </div>
                            </div>
            
                            <div class="form-group">
                                <label class="col-md-3 control-label col-xs-12" for="lbl_Address">Địa chỉ</label>  
                                <div class="col-md-3  col-xs-4">
                                    <input id="txt_Street_Address" name="street_Address" type="text" placeholder="Đường" class="form-control input-md ">
                                </div>
                            
                                <div class="col-md-3 col-xs-4">
                                    <input id="txt_Ward_Address" name="ward_Address" type="text" placeholder="Phường" class="form-control input-md ">
                                </div>
                            </div>
            
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="lbl_Address"></label>  
                                <div class="col-md-3  col-xs-4">
                                    <input id="txt_District_Address" name="district_Address" type="text" placeholder="Quận" class="form-control input-md ">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label" for="lbl_Address">Thành phố</label>  
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-location-arrow"></i>
                                        </div>
                                       
                                        <select class="form-control" name="city_Address" id="sel_City_Address">
                                           
                                        </select>
                        
                                    </div>
                                </div>
                            </div>
            
                            <!-- Text input-->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="lbl_Phone">Số điện thoại</label>  
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-phone"></i>
                                        </div>
                                        <input id="txt_Phone" name="phone" type="text" placeholder="Số điện thoại" class="form-control input-md" value="{{user.phone}}">
                                    </div>
                                </div>
                            </div>

                            <!-- Text input-->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="lbl_Email">Email</label>  
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-envelope-o"></i>
                                        </div>
                                        <input id="txt_Email" name="email" type="text" placeholder="Email" class="form-control input-md" value="{{user.email}}">
                                    </div>
                                </div>          
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label" ></label>  
                                <div class="col-md-6">
                                    <button type='submit' id="btn_Update" class="btn btn-success"><span class="glyphicon glyphicon-thumbs-up"></span>Cập nhật</button>
                                    <button href="#" id="btn_Clear" class="btn btn-danger" value=""><span class="glyphicon glyphicon-remove-sign"></span>Xóa dữ liệu</button>
                                </div>
                            </div>
                        </fieldset>
                </div>
            </div>
        </div>
    </div>

